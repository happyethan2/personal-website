---
import "@/styles/tailwind.css";
const {
  title = "Ethan Colgan",
  description = "Writing on health, technology, and the experiments in between.",
} = Astro.props;

const { pathname } = Astro.url;
const navLinks = [
  { href: "/blog", label: "Blog" },
  { href: "/recipes", label: "Recipes" },
  { href: "/stats", label: "Stats" },
];
---
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen selection:bg-blue-500/25 selection:text-blue-50">
    <div class="bg-glow"></div>
    <header class="container py-6 flex items-center justify-between">
      <a href="/" class="text-slate-100 font-semibold tracking-tight">ethancolgan.me</a>
      <nav class="flex items-center gap-4 text-sm">
        {navLinks.map(({ href, label }) => (
          <a
            href={href}
            class:list={{
              "hover:text-blue-300 transition-colors": true,
              "text-blue-300": pathname.startsWith(href),
              "text-slate-400": !pathname.startsWith(href),
            }}
          >
            {label}
          </a>
        ))}
      </nav>
    </header>
    <main class="container pb-20">
      <slot />
    </main>
    <footer class="container pb-10 text-xs text-slate-500">
      &copy; {new Date().getFullYear()} Ethan Colgan
    </footer>
  </body>
</html>
